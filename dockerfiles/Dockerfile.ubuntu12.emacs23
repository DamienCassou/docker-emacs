FROM ubuntu:12.04

# Install dependencies
RUN apt-get update && \
    apt-get install -y \
            imagemagick \
            ispell \
            libgif4 \
            libgnutls26 \
            libgtk2.0-0 \
            libjpeg8 \
            libmagick++4 \
            libncurses5 \
            libpng12-0 \
            libsm6 \
            libtiff4 \
            libx11-6 \
            libxpm4 \
            texinfo

WORKDIR /rootfs
ENV PATH="/opt/emacs/bin:${PATH}"
CMD ["emacs"]

COPY --from=full /opt/emacs /opt/emacs/

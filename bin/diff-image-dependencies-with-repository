#!/usr/bin/env bash

set -Eeuo pipefail

if [ $# -lt 1 ]; then
  echo "usage: $0 IMAGE" >&2
  exit 1
fi

image="$1"
timestamp="$(date +"%s%N")"
current="$image-$timestamp"

docker tag "$image" "$current"
docker pull "$image" >/dev/null
trap "docker tag $current $image; docker rmi $current >/dev/null" EXIT
diff-images-dependencies "$image" "$current"
